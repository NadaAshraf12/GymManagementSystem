@model List<GymManagementSystem.Application.DTOs.WorkoutSessionDto>
@{
    ViewData["Title"] = "My Sessions";
}

<h2>My Upcoming Sessions</h2>

<div class="mb-3">
    <a class="btn btn-success" href="@Url.Action("Create", "TrainerSessions")">
        <i class="fas fa-plus"></i> Add Session
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Start</th>
            <th>End</th>
            <th>Participants</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Title</td>
            <td>@s.SessionDate.ToString("yyyy-MM-dd")</td>
            <td>@s.StartTime</td>
            <td>@s.EndTime</td>
            <td>@s.CurrentParticipants / @s.MaxParticipants</td>
            <td>@s.Price.ToString("C")</td>
            <td>
                <a class="btn btn-sm btn-primary" href="@Url.Action("SessionAttendance", "Trainer", new { id = s.Id })">Manage Attendance</a>
            </td>
        </tr>
    }
    </tbody>
</table>


