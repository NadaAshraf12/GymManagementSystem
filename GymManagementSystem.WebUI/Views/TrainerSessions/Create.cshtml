@model GymManagementSystem.Application.DTOs.CreateWorkoutSessionDto
@{
    ViewData["Title"] = "Create Session";
}

<div class="container mt-4">
    <h2 class="mb-4">Create Session</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Create" method="post" class="row g-3">
        @Html.AntiForgeryToken()

        <div class="col-md-6">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Date</label>
            <input asp-for="SessionDate" type="date" class="form-control" />
            <span asp-validation-for="SessionDate" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Start</label>
            <input asp-for="StartTime" type="time" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">End</label>
            <input asp-for="EndTime" type="time" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Max Participants</label>
            <input asp-for="MaxParticipants" type="number" class="form-control" />
            <span asp-validation-for="MaxParticipants" class="text-danger"></span>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="~/Trainer/Sessions" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(el => el.remove());
        }, 3000);
    </script>
}