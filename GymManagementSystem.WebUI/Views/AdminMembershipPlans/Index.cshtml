@model GymManagementSystem.WebUI.Models.MembershipPlansAdminIndexViewModel
@{
    ViewData["Title"] = "Membership Plans";
}

<div class="row">
    <div class="col-lg-3">
        <partial name="_SaasSidebar" />
    </div>
    <div class="col-lg-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0"><i class="fas fa-tags me-2"></i>Membership Plans</h3>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus me-1"></i>Create Plan
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Duration</th>
                            <th>Discount</th>
                            <th>Commission</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var p in Model.Plans)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@p.Name</div>
                                <div class="small text-muted">@p.Description</div>
                            </td>
                            <td>@p.Price.ToString("C")</td>
                            <td>@p.DurationDays days</td>
                            <td>@p.DiscountPercentage.ToString("0.##")%</td>
                            <td>@p.CommissionRate.ToString("0.##")%</td>
                            <td>
                                <span class="badge @(p.IsActive ? "bg-success" : "bg-secondary")">
                                    @(p.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="d-flex gap-2 flex-wrap">
                                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                                    <form asp-action="ToggleActive" asp-route-id="@p.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-outline-warning btn-sm">Toggle Active</button>
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@p.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-outline-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Plans.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No membership plans found.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
