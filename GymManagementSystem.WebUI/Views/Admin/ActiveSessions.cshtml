@using GymManagementSystem.Application.DTOs
@model IEnumerable<ActiveSessionDto>
@{
    ViewData["Title"] = "Active Sessions";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-users"></i> Active Sessions
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>User</th>
                                        <th>Email</th>
                                        <th>IP Address</th>
                                        <th>Login Time</th>
                                        <th>Duration</th>
                                        <th>User Agent</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var session in Model)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-user-circle text-success"></i>
                                                @session.UserName
                                            </td>
                                            <td>@session.Email</td>
                                            <td>
                                                <span class="badge bg-info">@session.IpAddress</span>
                                            </td>
                                            <td>@session.LoginTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                            <td>
                                                @{
                                                    var duration = session.Duration;
                                                    var hours = (int)duration.TotalHours;
                                                    var minutes = duration.Minutes;
                                                    var seconds = duration.Seconds;
                                                }
                                                <span class="badge bg-primary">
                                                    @(hours > 0 ? $"{hours}h " : string.Empty)
                                                    @(minutes > 0 ? $"{minutes}m " : string.Empty)
                                                    @($"{seconds}s")
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(session.UserAgent?.Length > 50 ? session.UserAgent.Substring(0, 50) + "..." : session.UserAgent)
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No active sessions found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



