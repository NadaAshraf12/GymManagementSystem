@using GymManagementSystem.WebUI.Models.Admin
@model AssignTrainerViewModel
@{
    ViewData["Title"] = "Assign Trainer";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-primary">Assign Trainer to Member</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <form asp-action="AssignTrainer" method="post" class="row g-3">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Trainer</label>
                    <select asp-for="Input.TrainerId" asp-items="Model.Trainers" class="form-select" required>
                        <option value="">-- Select Trainer --</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Input.TrainerId"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Member</label>
                    <select asp-for="Input.MemberId" asp-items="Model.Members" class="form-select" required>
                        <option value="">-- Select Member --</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Input.MemberId"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Notes</label>
                    <input asp-for="Input.Notes" class="form-control" placeholder="Add any notes..." />
                </div>

                <div class="col-12 mt-3 text-center">
                    <button type="submit" class="btn btn-primary px-4 me-2">
                        <i class="bi bi-person-check"></i> Assign
                    </button>
                    <a class="btn btn-secondary px-4" asp-controller="AdminTrainers" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Back To List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(el => el.remove());
        }, 3000);
    </script>
}
