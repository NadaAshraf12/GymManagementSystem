@using GymManagementSystem.Application.DTOs
@model PaginatedResult<LoginAuditDto>
@{
    ViewData["Title"] = "Login Audits";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-history"></i> Login Audits
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model?.Items.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>User</th>
                                        <th>Email</th>
                                        <th>IP Address</th>
                                        <th>Login Time</th>
                                        <th>Logout Time</th>
                                        <th>Status</th>
                                        <th>Failure Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var audit in Model.Items)
                                    {
                                        <tr>
                                            <td>@audit.UserName</td>
                                            <td>@audit.Email</td>
                                            <td>
                                                <span class="badge bg-info">@audit.IpAddress</span>
                                            </td>
                                            <td>@audit.LoginTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                            <td>
                                                @if (audit.LogoutTime != null)
                                                {
                                                    @(audit.LogoutTime?.ToString("yyyy-MM-dd HH:mm:ss"))
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (audit.IsSuccessful)
                                                {
                                                    <span class="badge bg-success">Success</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Failed</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(audit.FailureReason))
                                                {
                                                    <span class="text-danger">@audit.FailureReason</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (Model != null && Model.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="?page=@i">@i</a>
                                        </li>
                                    }

                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No login audits found.
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <small class="text-muted">
                        Showing @(Model?.TotalItems ?? 0) total records
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
