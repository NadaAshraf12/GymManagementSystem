@using GymManagementSystem.Application.DTOs
@model List<TrainerReadDto>
@{
    ViewData["Title"] = "Trainers";
}
<h2>Trainers</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Add Trainer</a>
    <a class="btn btn-secondary" asp-controller="Admin" asp-action="AssignTrainer">Assign Trainer to Member</a>
    
    </p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialty</th>
            <th>Certification</th>
            <th>Experience</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.FirstName @t.LastName</td>
            <td>@t.Specialty</td>
            <td>@t.Certification</td>
            <td>@t.Experience</td>
            <td>@(t.IsActive ? "Active" : "Inactive")</td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@t.Id">Edit</a>
                <a class="btn btn-sm btn-outline-secondary" asp-action="Assignments" asp-route-id="@t.Id">Members</a>
                <form asp-action="Delete" asp-route-id="@t.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            onclick="return confirm('Are you sure you want to delete this trainer?');">
                        Delete
                    </button>
                </form>
            </td>

        </tr>
    }
    </tbody>
</table>
