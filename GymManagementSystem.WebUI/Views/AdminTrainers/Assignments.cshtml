@model List<GymManagementSystem.Domain.Entities.TrainerMemberAssignment>
@{
    var trainer = ViewBag.Trainer as GymManagementSystem.Domain.Entities.Trainer;
    ViewData["Title"] = "Assignments";
}
<h2>Assignments for @trainer?.FirstName @trainer?.LastName</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Member Code</th>
            <th>Member Name</th>
            <th>Assigned At</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var a in Model)
    {
        <tr>
            <td>@a.Member.MemberCode</td>
            <td>@a.Member.FirstName @a.Member.LastName</td>
            <td>@a.AssignedAt.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@a.Notes</td>
            <td>
                <form asp-action="RemoveMember" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="assignmentId" value="@a.Id" />
                    <input type="hidden" name="trainerId" value="@trainer.Id" />
                    <button type="submit" class="btn btn-sm btn-danger" 
                            onclick="return confirm('Are you sure you want to remove this member from the trainer?')">
                        Remove Member
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>


