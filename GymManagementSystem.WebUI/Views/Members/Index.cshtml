@model List<GymManagementSystem.Application.DTOs.MemberDto>

@{
    ViewData["Title"] = "Members Management";
}

<div class="container">
    <h2>Members Management</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <p>
        <a asp-action="Create" class="btn btn-success">Add New Member</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr class="table-primary">
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Member Code</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.FirstName @member.LastName</td>
                    <td>@member.Email</td>
                    <td>@member.PhoneNumber</td>
                    <td>@member.MemberCode</td>
                    <td>
                        @if (member.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@member.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@member.Id" />
                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this member?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>