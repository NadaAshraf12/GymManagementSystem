@model GymManagementSystem.WebUI.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-circle"></i> My Profile
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="profile-picture-container">
                                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                                {
                                    <img src="~/uploads/profiles/@Model.ProfilePicture" 
                                         alt="Profile Picture" 
                                         class="profile-picture img-fluid rounded-circle shadow mb-3">
                                }
                                else
                                {
                                    <div class="profile-picture-placeholder rounded-circle shadow mb-3">
                                        <i class="fas fa-user fa-5x text-muted"></i>
                                    </div>
                                }
                                <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                                <span class="badge bg-info">@Model.Role</span>
                                <div class="mt-3">
                                    <a href="@Url.Action("Edit")" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Edit Profile
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-12">
                                    <h5 class="text-primary mb-3">
                                        <i class="fas fa-info-circle"></i> Personal Information
                                    </h5>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong><i class="fas fa-id-card text-muted"></i> First Name:</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.FirstName
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong><i class="fas fa-id-card text-muted"></i> Last Name:</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.LastName
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong><i class="fas fa-envelope text-muted"></i> Email:</strong>
                                </div>
                                <div class="col-sm-9">
                                    <a href="mailto:@Model.Email" class="text-decoration-none">
                                        @Model.Email
                                    </a>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong><i class="fas fa-phone text-muted"></i> Phone:</strong>
                                </div>
                                <div class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                            @Model.PhoneNumber
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong><i class="fas fa-shield-alt text-muted"></i> Role:</strong>
                                </div>
                                <div class="col-sm-9">
                                    <span class="badge bg-secondary">@Model.Role</span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong><i class="fas fa-calendar-plus text-muted"></i> Member Since:</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.CreatedAt.ToString("MMMM dd, yyyy")
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong><i class="fas fa-toggle-on text-muted"></i> Status:</strong>
                                </div>
                                <div class="col-sm-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </div>
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-12">
                                    <h5 class="text-primary mb-3">
                                        <i class="fas fa-cogs"></i> Quick Actions
                                    </h5>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit")" class="btn btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit Profile
                                        </a>
                                        <a href="@Url.Action("ChangePassword", "Auth")" class="btn btn-outline-warning">
                                            <i class="fas fa-key"></i> Change Password
                                        </a>
                                        @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                                        {
                                            <form method="post" action="@Url.Action("DeletePicture")" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" 
                                                        onclick="return confirm('Are you sure you want to delete your profile picture?')">
                                                    <i class="fas fa-trash"></i> Delete Picture
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-picture-container {
        position: relative;
    }

    .profile-picture {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border: 5px solid #fff;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .profile-picture-placeholder {
        width: 200px;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        border: 5px solid #fff;
        margin: 0 auto;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
        border: none;
    }

    .btn-group .btn {
        margin-right: 5px;
        margin-bottom: 5px;
    }
</style>
