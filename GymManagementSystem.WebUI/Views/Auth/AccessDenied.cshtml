@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">Access Denied</h2>
            </div>
            <div class="card-body">
                <i class="fas fa-ban fa-5x text-danger mb-4"></i>
                <h4>You don't have permission to access this page.</h4>
                <p class="text-muted">Please contact the administrator if you believe this is an error.</p>

                <div class="mt-4">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Go to Home</a>
                    <a asp-action="Login" asp-controller="Auth" class="btn btn-outline-secondary">Login with different account</a>
                </div>
            </div>
        </div>
    </div>
</div>