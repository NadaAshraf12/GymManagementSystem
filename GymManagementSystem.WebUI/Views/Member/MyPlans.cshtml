@{
    ViewData["Title"] = "My Plans";
    var currentMembership = ViewBag.CurrentMembership as GymManagementSystem.Application.DTOs.MembershipReadDto;
    var assignment = ViewBag.Assignment as GymManagementSystem.Application.DTOs.MemberPlanAssignmentDto;
    var training = ViewBag.TrainingPlan as GymManagementSystem.Application.DTOs.TrainingPlanDto;
    var nutrition = ViewBag.NutritionPlan as GymManagementSystem.Application.DTOs.NutritionPlanDto;
    var upcoming = ViewBag.Upcoming as List<GymManagementSystem.Application.DTOs.MemberUpcomingBookingDto>;
    var trainerUpcoming = ViewBag.TrainerUpcoming as List<GymManagementSystem.Application.DTOs.WorkoutSessionDto>;
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
    <div class="card-header bg-dark text-white fw-bold">Current Membership</div>
    <div class="card-body">
        @if (currentMembership == null)
        {
            <div class="text-muted">No membership found.</div>
        }
        else
        {
            var badgeClass = currentMembership.Status switch
            {
                GymManagementSystem.Domain.Enums.MembershipStatus.Active => "bg-success",
                GymManagementSystem.Domain.Enums.MembershipStatus.PendingPayment => "bg-warning text-dark",
                GymManagementSystem.Domain.Enums.MembershipStatus.Expired => "bg-danger",
                _ => "bg-secondary"
            };

            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div>
                    <div><strong>Plan:</strong> @currentMembership.MembershipPlanName</div>
                    <div><strong>Start:</strong> @currentMembership.StartDate.ToString("yyyy-MM-dd")</div>
                    <div><strong>End:</strong> @currentMembership.EndDate.ToString("yyyy-MM-dd")</div>
                </div>
                <span class="badge @badgeClass fs-6">@currentMembership.Status</span>
            </div>
            <div class="mt-3">
                @if (currentMembership.Status == GymManagementSystem.Domain.Enums.MembershipStatus.PendingPayment)
                {
                    <a asp-controller="Portal" asp-action="Index" class="btn btn-warning btn-sm">Upload Payment Proof</a>
                }
                @if (currentMembership.Status == GymManagementSystem.Domain.Enums.MembershipStatus.Active)
                {
                    <form asp-controller="Portal" asp-action="RenewMembership" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="planId" value="@currentMembership.MembershipPlanId" />
                        <button class="btn btn-primary btn-sm">Renew</button>
                    </form>
                }
            </div>
        }
    </div>
</div>
    <h2 class="text-center mb-4 text-primary fw-bold">üèãÔ∏è‚Äç‚ôÄÔ∏è My Plans</h2>

    <div class="row g-4">

        <div class="col-md-6 col-lg-4">
            <div class="card border-primary mb-3 shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">Assigned Trainer</div>
                <div class="card-body">
                    @if (assignment != null)
                    {
                        <h5 class="card-title">@assignment.TrainerName</h5>
                        <p class="card-text text-muted">@assignment.Specialty</p>
                    }
                    else
                    {
                        <p class="text-secondary">No trainer assigned yet.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card border-success mb-3 shadow-sm">
                <div class="card-header bg-success text-white fw-bold">Latest Training Plan</div>
                <div class="card-body">
                    @if (training != null)
                    {
                        <h5 class="card-title">@training.Title</h5>
                        <p class="card-text text-muted">@training.CreatedAt.ToString("yyyy-MM-dd")</p>
                        <ul class="list-group">
                            @foreach (var i in (training.Items ?? new List<GymManagementSystem.Application.DTOs.TrainingPlanItemDto>()).OrderBy(x => x.DayOfWeek))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@i.DayOfWeek:</strong> @i.ExerciseName (@i.Sets x @i.Reps)
                                        <small class="text-muted">@i.Notes</small>
                                    </div>
                                    <form asp-action="ToggleTrainingItem" asp-controller="Member" method="post">
                                        <input type="hidden" name="itemId" value="@i.Id" />
                                        <button type="submit" class="btn btn-sm @(i.IsCompleted ? "btn-success" : "btn-outline-secondary")">
                                            @(i.IsCompleted ? "‚úì Done" : "Mark")
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-secondary">No training plan yet.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card border-warning mb-3 shadow-sm">
                <div class="card-header bg-warning fw-bold">Latest Nutrition Plan</div>
                <div class="card-body">
                    @if (nutrition != null)
                    {
                        <h5 class="card-title">@nutrition.Title</h5>
                        <p class="card-text text-muted">@nutrition.CreatedAt.ToString("yyyy-MM-dd")</p>
                        <ul class="list-group">
                            @foreach (var i in (nutrition.Items ?? new List<GymManagementSystem.Application.DTOs.NutritionPlanItemDto>()).OrderBy(x => x.DayOfWeek))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@i.DayOfWeek:</strong> (@i.MealType) @i.FoodDescription
                                        <small class="text-muted">(@i.Calories cal) @i.Notes</small>
                                    </div>
                                    <form asp-action="ToggleNutritionItem" asp-controller="Member" method="post">
                                        <input type="hidden" name="itemId" value="@i.Id" />
                                        <button type="submit" class="btn btn-sm @(i.IsCompleted ? "btn-warning" : "btn-outline-secondary")">
                                            @(i.IsCompleted ? "‚úì Done" : "Mark")
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-secondary">No nutrition plan yet.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card border-info mb-3 shadow-sm">
                <div class="card-header bg-info text-white fw-bold">Trainer's Upcoming Sessions</div>
                <div class="card-body">
                    @if (trainerUpcoming != null && trainerUpcoming.Count > 0)
                    {
                        var booked = ViewBag.BookedSessionIds as HashSet<int> ?? new HashSet<int>();
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-info text-center">
                                <tr>
                                    <th>Title</th>
                                    <th>Date</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>Price</th>
                                    <!-- <th>Participants</th> -->
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in trainerUpcoming)
                                {
                                    <tr class="text-center">
                                        <td>@s.Title</td>
                                        <td>@s.SessionDate.ToString("yyyy-MM-dd")</td>
                                        <td>@s.StartTime</td>
                                        <td>@s.EndTime</td>
                                        <td>@s.Price.ToString("C")</td>
                                        <!-- <td>@s.CurrentParticipants / @s.MaxParticipants</td> -->
                                        <td>
                                            @if (booked.Contains(s.Id))
                                            {
                                                <form asp-action="NotAttendSession" asp-controller="Member" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="workoutSessionId" value="@s.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">Not attend</button>
                                                </form>
                                            }
                                            else
                                            {
                                                var isFull = s.CurrentParticipants >= s.MaxParticipants;
                                                if (s.Price > 0)
                                                {
                                                    <a class="btn btn-sm btn-primary @(isFull ? "disabled" : "")" asp-controller="Portal" asp-action="Index">Buy via Wallet</a>
                                                }
                                                else
                                                {
                                                    <form asp-action="AttendSession" asp-controller="Member" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="workoutSessionId" value="@s.Id" />
                                                        <button type="submit" class="btn btn-sm btn-success" @(isFull ? "disabled" : null)>I will attend</button>
                                                    </form>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-secondary">No trainer sessions yet.</p>
                    }
                </div>
            </div>
        </div>

    </div>
</div>


