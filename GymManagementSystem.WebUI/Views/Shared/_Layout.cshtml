<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gym Management System</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-profile-picture {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid rgba(255, 255, 255, 0.3);
            transition: border-color 0.3s ease;
        }
        
        .navbar-profile-picture:hover {
            border-color: rgba(255, 255, 255, 0.6);
        }
        
        .nav-link:hover .navbar-profile-picture {
            transform: scale(1.1);
            transition: transform 0.2s ease;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dumbbell"></i> Gym Management System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Members" asp-action="Index">
                                    <i class="fas fa-users"></i> Members
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="AdminTrainers" asp-action="Index">
                                    <i class="fas fa-user-tie"></i> Trainers
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="saasDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-chart-line"></i> SaaS
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="saasDropdown">
                                    <li><h6 class="dropdown-header">ADMIN OPERATIONS</h6></li>
                                    <li><a class="dropdown-item" asp-controller="SaasAdmin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt"></i> Dashboard
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="SaasAdmin" asp-action="Memberships">
                                        <i class="fas fa-id-card"></i> Memberships
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="SaasAdmin" asp-action="CreateMembership">
                                        <i class="fas fa-user-plus"></i> Create Membership
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="AdminMembershipPlans" asp-action="Index">
                                        <i class="fas fa-tags"></i> Membership Plans
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="SaasAdmin" asp-action="Branches">
                                        <i class="fas fa-code-branch"></i> Branches
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="SaasAdmin" asp-action="Commissions">
                                        <i class="fas fa-money-bill-wave"></i> Commissions
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="SaasAdmin" asp-action="WalletTopUp">
                                        <i class="fas fa-wallet"></i> Wallet Management
                                    </a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cog"></i> Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="LoginAudits">
                                        <i class="fas fa-history"></i> Login Audits
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ActiveSessions">
                                        <i class="fas fa-users"></i> Active Sessions
                                    </a></li>
                                    
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Trainer"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="trainerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-dumbbell"></i> Trainer
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="trainerDropdown">
                                    <li><a class="dropdown-item" asp-controller="Trainer" asp-action="MyMembers">
                                        <i class="fas fa-user-friends"></i> My Members
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Trainer" asp-action="Sessions">
                                        <i class="fas fa-calendar-alt"></i> My Sessions
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Trainer" asp-action="Commissions">
                                        <i class="fas fa-money-bill-wave"></i> My Commissions
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Trainer" asp-action="FinancialDashboard">
                                        <i class="fas fa-chart-line"></i> Financial Dashboard
                                    </a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Member"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Portal" asp-action="Index">
                                    <i class="fas fa-user-circle"></i> Member Portal
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Member" asp-action="FinancialProfile">
                                    <i class="fas fa-wallet"></i> Financial Profile
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Trainer") || User.IsInRole("Member"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Chat" asp-action="Index">
                                    <i class="fas fa-comments"></i> Chat
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Privacy
                            </a>
                        </li>
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Success"] is string successMessage)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] is string errorMessage)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Warning"] is string warningMessage)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@warningMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Auto-hide success messages after 10 seconds
        $(document).ready(function() {
            $('.alert-success').each(function() {
                var alert = $(this);
                setTimeout(function() {
                    alert.fadeOut('slow', function() {
                        alert.remove();
                    });
                }, 10000); // 10 seconds
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
